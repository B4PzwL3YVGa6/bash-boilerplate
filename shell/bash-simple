_simple() {
  printf "Perform a simple operation."
}

usage="\
      _                 _
  ___(_)_ __ ___  _ __ | | ___
 / __| | '_ \` _ \\| '_ \\| |/ _ \\
 \\__ \\ | | | | | | |_) | |  __/
 |___/_|_| |_| |_| .__/|_|\\___|
                 |_|

A template for creating a simple bash script.

Usage:
  bash-simple argument
"
if [[ -z "$1" || "$1" = "-h" ]]; then
  printf "%s\n" "$usage"
  exit 0
fi

_simple "$@"

